<div class="navbar navbar-expand-sm navbar-light navbar-preface">
  <%= link_to calendar_path, class: "navbar-brand" do %>
    <%= image_tag "shared/nomad_logo.svg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Calendar", calendar_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Subjects", subjects_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Teachers", teachers_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Timeslots", timeslots_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", calendar_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
