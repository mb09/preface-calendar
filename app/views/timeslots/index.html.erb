<div class="calendar_wrapper">
  <div class="container">

    <p id="notice"><%= notice %></p>

    <h1>Timeslots</h1>
    <%= link_to 'New Timeslot', new_timeslot_path, :class=> "btn btn-primary" %>
    <div class="spacer-40"></div>

      <table class="table">
      <thead>
        <tr>
          <th>Teacher</th>
          <th>Dow</th>
          <th>Start time</th>
          <th>State</th>
          <th>Footnote</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @timeslots.each do |timeslot| %>
          <tr>
            <td><%= timeslot.teacher.name %></td>
            <td><%= @dow_names[timeslot.dow] %></td>
            <td><%= timeslot.start_time.nil? ? "" : timeslot.start_time.strftime("%I:%M%p") %></td>
            <td><%= timeslot.state %></td>
            <td><%= timeslot.footnote %></td>
            <td><%= link_to 'Edit', edit_timeslot_path(timeslot), :class=> "btn btn-primary w100" %></td>
            <td><%= link_to 'Destroy', timeslot, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-primary w100" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Timeslot', new_timeslot_path, :class=> "btn btn-primary" %>
  </div>
</div>
