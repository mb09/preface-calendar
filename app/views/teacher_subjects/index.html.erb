<p id="notice"><%= notice %></p>

<h1>Teacher Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_subjects.each do |teacher_subject| %>
      <tr>
        <td><%= teacher_subject.teacher.name %></td>
        <td><%= teacher_subject.subject.name %></td>
        <td><%= link_to 'Show', teacher_subject %></td>
        <td><%= link_to 'Edit', edit_teacher_subject_path(teacher_subject) %></td>
        <td><%= link_to 'Destroy', teacher_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

