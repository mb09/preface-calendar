<div class="calendar_wrapper">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Subjects</h1>
    <%= link_to 'New Subject', new_subject_path, :class=> "btn btn-primary" %>
    <div class="spacer-40"></div>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= link_to 'Edit', edit_subject_path(subject), :class=> "btn btn-primary w100" %></td>
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-primary w100" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Subject', new_subject_path, :class=> "btn btn-primary" %>
  </div>
</div>
