<div class="calendar_wrapper">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Teachers</h1>
    <%= link_to 'New Teacher', new_teacher_path, :class=> "btn btn-primary" %>
    <div class="spacer-40"></div>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Subjects</th>
          <th>Footnote</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.subject_string %></td>
            <td><%= teacher.footnote %></td>
            <td><%= link_to 'Edit', edit_teacher_path(teacher), :class=> "btn btn-primary w100" %></td>
            <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } , :class=> "btn btn-primary w100"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Teacher', new_teacher_path, :class=> "btn btn-primary" %>
  </div>
</div>
